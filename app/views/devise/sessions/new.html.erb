<div class="logo-container-form">
  <img id="logo" src="https://res.cloudinary.com/dxmzqi2oa/image/upload/v1741774495/Spry_logo_vector_tgi19v.png" alt="spry logo">
</div>

<div>
  <h2 class="title">Log in</h2>
</div>

<div class="form_container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "mscott@mail.com",
                  input_html: { autocomplete: "email", class: "inputs"} %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "inputs"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
</div>

<div class="form-actions" id="log_submit_btn_container">
  <%= f.button :submit, "Log in",input_html: { class: "submit_btn"} %>
</div>
  <% end %>

<div class="signup_btn_container">
  <%= render "devise/shared/links" %>
</div>
