 <div class="container-void">
      <div class="container-void w-100">
        <div class="challenge-team-index"><%= @challenge.team_name %></div>
        <div class="challenge-name-index"><%= @challenge.title %></div>

       <div class="duration-challenge-img">
          <% if @challenge.duration == 504.0 %>
            <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1742470488/1_tsj7oz.png">
          <% elsif @challenge.duration == 150.0 %>
            <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1742470488/3_u0inhf.png">
          <% elsif @challenge.duration == 156.0 %>
            <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1742470488/2_lrlaag.png">
          <% else %>
            <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1742470488/4_k0f543.png">
          <% end %>
       </div>

        <div class="progress-container-all">
          <%= render 'challenges/progress_block_show', challenge: @challenge, participation: participation %>
          <div class="summary-container w-100">
          <div class="card-challenge-container">
            <div class="card distance-card">
              <div class="card-icon">
                <!-- Icône de distance -->
                <i class="fa-solid fa-person-running"></i>
              </div>
              <div class="card-content">
                <% total_distance = challenge.participations.sum(:distance).round %>
                <span class="card-value"><%= total_distance %></span>
                <span class="card-label">Kilometers</span>
              </div>
            </div>

            <div class="card steps-card">
              <div class="card-icon">
                <!-- Icône de pas -->
               <i class="fa-solid fa-stairs"></i>
              </div>
              <div class="card-content">
                  <% total_distance = challenge.participations.sum(:distance).round %>
                  <% total_steps = total_distance * 1500 %>
                  <span class="card-value"><%= format_steps(total_steps) %></span>
                  <span class="card-label">Steps</span>
                </div>
              </div>
            </div>
          </div>
         </div>
          <%= render 'challenges/progress_new_distance', challenge: @challenge, participation: participation %>
        </div>
  <div class="container-card-challenge-details">
      </div>
</div>
