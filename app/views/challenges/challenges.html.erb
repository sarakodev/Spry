<div class="container-challenges-global">
  <div class="container-top">
    <div class="My-Challenges-title-container">
      <h2 class="My-Challenges-title">My Challenges 🏆</h2>
      <h3 class="description-exercise">Exercise with your friends!</h3>
      <%= link_to "Add a new challenge", new_challenge_path, class: "btn btn-white mx-auto", data: { turbo: false } %>
    </div>
  </div>

  <%# <div class="container-card-challenge-details"> %>
    <div class="dashboard-container challenges-list">
      <% if @challenges.any? %>
        <% @challenges.each do |challenge| %>
          <%= render "challenges/challenge", challenge: challenge %>
        <% end %>
      <% else %>
        <%= render "challenges/new_challenge" %>
      <% end %>
    </div>
  <%# </div> %>
</div>
