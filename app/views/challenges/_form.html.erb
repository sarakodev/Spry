<div class="form-container">
  <%= simple_form_for(challenge) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :category, label: "Which challenge do you want to start?", prompt: "Choose your challenge", collection: Challenge::CATEGORIES, input_html: { class: "inputs"} %>
      <%= f.input :start_point, label: "Starting point",
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
       <%= f.input :end_point, label: "Endpoint",
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
      <%= f.input :title, label: "Challenge name", placeholder: "From Paris to Marseille", input_html: { class: "inputs"} %>
      <%= f.input :team_name, label: "Team name", placeholder: "Charlotte and Tom's team", input_html: { class: "inputs"} %>
    </div>

    <div class="form-actions form-actions-challenges">
      <%= f.button :submit, "Start now", class: "btn btn-purple btn-challenge"%>
    </div>
  <% end %>
</div>
