<%= simple_form_for(event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Name"%>
    <%= f.input :pace, label: "Pace" %>
    <%= f.datetime_local_field :datetime, label: "Datetime", class: "form-control"  %>
    <%= f.input :description, label: "Description"%>
    <%= f.input :participants, label: "Participants"%>
    <%= f.input :kilometers, label: "Distance"%>
    <%= f.input :location, label: "Location"%>
 </div>

  <%= f.button :submit, value: "Create an event", class: "ms-2 btn btn-flat   "%>
<% end %>
