<div class="form_container">
  <%= simple_form_for(event) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



  <div class="form-inputs">
    <%= f.input :name, label: "Name"%>
    <%= f.input :pace, label: "Pace" %>
    <%= f.datetime_local_field :datetime, label: "Datetime", class: "form-control"  %>
    <%= f.input :description, label: "Description"%>
    <%= f.input :participants, label: "Participants"%>
    <%= f.input :kilometers, label: "Distance"%>
    <%= f.input :location, label: "Location"%>
    <%= f.input :photo, as: :file %>
 </div>

<div class="form-actions" id="event_submit_btn_container">
  <%= f.button :submit, value: "Create my event", class: "ms-2 btn btn-flat"%>
</div>
  <% end %>

