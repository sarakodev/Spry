  <% @events.each do |event| %>
  <%= link_to event_path(event), class: "plain" do %>
    <strong> <%= event.name %></strong>
    <p> Location: <%= event.location %></p>
    <p> Date and time: <%= event.datetime %></p>
    <p> Number of participants: <%= event.participants %></p>
    <p> distance: <%= event.participants %> km</p>
    <p><%= event.user.first_name %></p>
    <% if event.pace? %>
      <p>Pace: <%= event.pace %></p>
    <% end %>
    <% end %>
  <% end %>
