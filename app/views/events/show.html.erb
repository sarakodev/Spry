<div>
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, class: "cover-photo" %>
  <% else %>
    <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1741778812/Design_sans_titre-5_lbuads.png" class="cover-photo" >
  <% end %>
</div>

<div class="container">
  <div class="event-show-card">
    <h2><%= @event.name %></h2>
    <p> Location: <%= @event.location %></p>
    <p> Date and time: <%= @event.datetime %></p>
    <p> Number of participants: <%= @event.participants %></p>
    <p> distance: <%= @event.participants %> km</p>
    <p> description: <%= @event.description %></p>
    <% if @event.pace? %>
    <p>Pace: <%= @event.pace %></p>
    <% end %>
    <%= link_to "Retour", events_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="user-container">
  <%= cl_image_tag @event.user.photo.key %>
  <p>Organizer: <%= @event.user.first_name %></p>
</div>
