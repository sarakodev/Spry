<div class="container chat">
  <h1>Your chat with <%= @chatroom.first_user == current_user ? @chatroom.second_user.first_name : @chatroom.first_user.first_name %></h1>


  <div id="messages" class="messages">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
  <%= simple_form_for [@chatroom, @message],
  html: {class: "d-flex"} do |f|
%>
<div id="messages" class="messages">
  <% other_user = current_user == @chatroom.first_user ? @chatroom.second_user : @chatroom.first_user %>
  <%= f.input :content,
    label: false,
    placeholder: "Message to #{other_user.first_name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
</div>
